<div class="mx-auto flex flex-col justify-start gap-y-20 bg-gray-900 text-white pt-32 pb-20">
  <section>
    <h1 class="text-4xl font-bold pl-16 pb-12 text-white">Series</h1>
    <div class="flex flex-wrap gap-6 justify-center">
      <% series.forEach((serie) => { %>
      <%- include('../components/CardItem', { data: serie, type: 'serie' }) %>
      <% }); %>
    </div>
    <div class="pt-12">
      <%- include('../components/Pagination', { currentPage: currentPageSeries, pageCount: pageCountSeries, type: "series" }) %>
    </div>
  </section>
  <section>
    <h1 class="text-4xl font-bold pl-16 pb-12 text-white">Latest Series</h1>
    <div class="flex flex-wrap gap-6 justify-center">
      <% latestSeries.forEach((latestSerie) => { %>
      <%- include('../components/CardItem', { data: latestSerie, type: 'serie' }) %>
      <% }); %>
    </div>
  </section>
</div>