<div class="bg-gray-900 text-white pt-32 pb-20">
    <section class="max-w-4xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
        <div class="flex flex-col md:flex-row items-center gap-8">
            <div class="w-full md:w-1/3">
                <img src="<%= serie.photoSrc %>" alt="<%= serie.title %>" class="rounded-lg shadow-lg" />
            </div>
            <div class="w-full md:w-2/3 mt-4 md:mt-0 md:ml-6">
                <h2 class="text-3xl font-semibold mb-2 text-center"><%= serie.title %></h2>
                <div class="flex space-x-2 mb-4 justify-center pt-2">
                    <% serie.genres.forEach(function(genre) { %>
                        <a href="/genres/<%= genre.genre.name %>">
                            <span class="bg-gray-700 text-gray-300 px-3 py-1 rounded-full"><%= genre.genre.name %></span>
                        </a>
                    <% }); %>
                </div>
                <div class="flex items-center space-x-4 mb-4 justify-center pt-2">
                    <div class="flex items-center">
                        <i class="far fa-clock text-gray-400"></i>
                        <span class="ml-1"><%= serie.duration %></span>
                    </div>
                    <div class="flex items-center">
                        <i class="far fa-calendar-alt text-gray-400"></i>
                        <span class="ml-1"><%= serie.releaseYear %></span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-star text-gray-400"></i>
                        <span class="ml-1"><%= serie.averageRating %> (<%= serie.totalReviews %>)</span>
                    </div>
                </div>
                <p class="text-gray-400 mb-4 text-center">
                    <%= serie.description %>
                </p>
                <a href="<%= serie.trailerSrc %>" class="flex justify-center">
                    <button class="flex items-center px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg">
                        <i class="fab fa-youtube mr-2"></i> Watch Trailer
                    </button>
                </a>
            </div>
        </div>
    </section>
    <section class="pt-20 pl-8">
        <h1 class="text-4xl font-bold pb-8 text-white">Latest Series</h1>
        <div class="flex flex-wrap gap-6 justify-start">
            <% latestSeries && latestSeries.forEach(function(latestSerie) { %>
                <%- include('../components/cardItem', { data: latestSerie, type: 'serie' }) %>
            <% }); %>
        </div>
    </section>
    <section class="pt-20 pl-8">
        <h1 class="text-4xl font-bold pb-8 text-white">Related Series</h1>
        <div class="flex flex-wrap gap-6 justify-start">
            <% if (relatedSeries && relatedSeries.length > 0) { %>
                <% relatedSeries.forEach(function(relatedSerie) { %>
                    <%- include('../components/cardItem', { data: relatedSerie, type: 'serie' }) %>
                <% }); %>
            <% } else { %>
                <p>No related series found.</p>
            <% } %>
        </div>
    </section>     
</div>